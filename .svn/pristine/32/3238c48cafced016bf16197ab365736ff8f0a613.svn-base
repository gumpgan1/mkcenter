<form id="createUser" style="color:#696666d9;display:none">
	<br/>
	<div class="row">
         <label for="newU" class="col-md-4" style="margin-top:10px">
             	<i class="fa fa-user-circle"></i> 用户名:
         </label>
         <div class="col-md-8">
             <input type="text" name="username" class="form-control" id="newU" placeholder="请输入用户名，允许大小写字母、数字和下划线">
         </div>
     </div>  
     <br/>
	<div class="row">
	       <label class="col-md-4" style="margin-top:10px">
	             	<i class="fa fa-key"></i> 密码:
	        </label>
	        <div class="col-md-8">
	            <label style="margin-top:10px"><span style="color:red">预设密码均为：123456</span></label>
	        </div>
	 </div>  
     <br/>
     <div class="row">
         <label for="newAuth" class="col-md-4" style="margin-top:10px">
             	<i class="fa fa-key"></i> 权限 ：
         </label>
         <div class="col-md-8" id="active1">
             <label class="radio" style="margin-top:10px">
                <input type="radio" name="autority" id="new_user" value="0" checked >
                	  普通用户
             </label>
              <label class="radio" style="margin-top:10px">
                <input type="radio" name="autority" id="new_designer" value="1">
                	   <span style="color:blue"> 设计人员</span>
             </label>
             <label class="radio" style="margin-top:10px">
                <input type="radio" name="autority" id="new_root" value="99">
                	  <span style="color:red"> 管理员</span>
             </label>  
         </div>
     </div>
     <br/>
     	<div class="row">
         <label  class="col-md-4" style="margin-top:10px">
             	<i class="fa fa-user-circle"></i> 所属公司:
         </label>
         <div class="col-md-8">
             <!-- <input type="text" name="companyname" class="form-control" id="ofcompany" placeholder="请输入公司名称"> -->
             <select id="companyid" name="companyid" style="width:100%;height:38px;"></select>
         </div>
     </div>
     <br/>
     	<div class="row">
         <label  class="col-md-4" style="margin-top:10px">
             	<i class="fa fa-user-circle"></i> 所属产线:
         </label>
         <div class="col-md-8">
             <select id="lineid" name="lineid" style="width:100%;height:38px;"></select>
         </div>
     </div>
     <br/>
     <div class="row">
    	<div class="col-lg-offset-3 col-lg-2">
    		<button type="reset" class="btn btn-default" style="width:60px;color:#000000;border-color:#000000;border-width:1px">
          			重置	              		    
            </button>
    	</div>
    	<div class="col-lg-offset-2 col-lg-2">
    		<button type="button" id="new_ok" onclick="createUser()" class="btn btn-default" style="width:60px;color:#000000;border-color:#000000;border-width:1px">
          			 确定
     		</button>
    	</div>
   	</div>
</form>
<form id="changeUser" style="color:#696666d9;display:none">
	<br/>
	<div class="row">
         <label class="col-md-4" style="margin-top:10px">
             	<i class="fa fa-sort-numeric-asc"></i>序号:
         </label>
         <div class="col-md-8">
             <label id="changeNo" style="margin-top:10px">xx</label>
         </div>
         <input type="hidden" name="userid" id="No"/>
     </div> 
	<br/>
	<div class="row">
         <label for="changeU" class="col-md-4" style="margin-top:10px">
             	<i class="fa fa-user-circle"></i> 用户名:
         </label>
         <div class="col-md-8">
             <input type="text" name="username" class="form-control" id="changeU" placeholder="请输入用户名">
         </div>
     </div>  
     <br/>
     <div class="row">
         <label for="newAuth" class="col-md-4" style="margin-top:10px">
             	<i class="fa fa-key"></i> 权限 ：
         </label>
         <div class="col-md-8">
             <label class="radio" style="margin-top:10px">
                <input type="radio" name="autority" id="change_user" value="0" checked >
                	  普通用户
             </label>
             <label class="radio" style="margin-top:10px">
                <input type="radio" name="autority" id="change_designer" value="1">
                	   <span style="color:blue"> 设计人员</span>
             </label>
             <label class="radio" style="margin-top:10px">
                <input type="radio" name="autority" id="change_root" value="99">
                	  <span style="color:red"> 管理员</span>
             </label>
         </div>
     </div>
     <br/>
     <div class="row">
    	<div class="col-lg-offset-3 col-lg-2">
    		<button type="reset" class="btn btn-default" style="width:60px;color:#000000;border-color:#000000;border-width:1px">
          			重置	              		    
            </button>
    	</div>
    	<div class="col-lg-offset-2 col-lg-2">
    		<button type="button" id="change_ok" onclick="changeUser()" class="btn btn-default" style="width:60px;color:#000000;border-color:#000000;border-width:1px">
          			 确定
     		</button>
    	</div>
   	</div>
</form>
<form id="deleteUser" style="color:#696666d9;display:none">
	<br/>
	<div class="row">
         <label class="col-md-12" style="margin-top:10px;text-align:center;">
             	<i class="fa fa-warning"></i>是否要删除角色为<span id="del_role" style="color:red"></span>的<span id="del_name" style="color:blue"></span>？
         </label>
         <input type="hidden" name="userid" id="del_id"/>
     </div> 
	<br/>
     <div class="row">
    	<div class="col-lg-offset-3 col-lg-2">
    		<button type="button" id="del_no" onclick="closeDel()" class="btn btn-default" style="width:60px;color:#000000;border-color:#000000;border-width:1px">
          			取消	              		    
            </button>
    	</div>
    	<div class="col-lg-offset-2 col-lg-2">
    		<button type="button" id="del_ok" onclick="deleteUser()" class="btn btn-default" style="width:60px;color:#000000;border-color:#000000;border-width:1px">
          			 确定
     		</button>
    	</div>
   	</div>
</form>
